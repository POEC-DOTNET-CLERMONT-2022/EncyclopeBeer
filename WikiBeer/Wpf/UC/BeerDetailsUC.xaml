<UserControl x:Class="Ipme.WikiBeer.Wpf.UC.BeerDetailsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UC"
             mc:Ignorable="d" 
             x:Name="detail"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContext="{Binding ., ElementName=detail}">
        <TextBlock Text="Détails de la bière :" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nom :" />
            <!--CurrentBeer est la property current Beer déclaré comme DependancyProperty-->
            <TextBlock Width="500" Text="{Binding CurrentBeer.Name}"  />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Degré :" />
            <TextBlock Width="500" Text="{Binding CurrentBeer.Degree}"  />
        </StackPanel>
    </StackPanel>
</UserControl>
