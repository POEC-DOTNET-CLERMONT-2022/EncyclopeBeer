<UserControl x:Class="Ipme.WikiBeer.Wpf.UserControls.Components.BeerDetailsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UserControls.Components"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="600" d:DesignWidth="800">
    <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="2" CornerRadius="5">
        <Grid DataContext="{Binding ., ElementName=root}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Name" FontWeight="Bold"/>
                        <TextBox Text="{Binding Name}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Brewery" FontWeight="Bold"/>
                        <ComboBox Name="BreweryComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="BreweryComboBox_TextChanged" 
                                  SelectionChanged="BreweryComboBox_SelectionChanged"
                            >
                            <ComboBoxItem> Choice </ComboBoxItem>
                            <ComboBoxItem> Choice </ComboBoxItem>
                            <ComboBoxItem> Choice </ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Style" FontWeight="Bold"/>
                        <ComboBox TextBoxBase.TextChanged="StyleComboBox_TextChanged"  VerticalAlignment="Top" Name="StyleComboBox" IsEditable="True" StaysOpenOnEdit="True" SelectionChanged="StyleComboBox_SelectionChanged">
                            <ComboBox>
                                <ComboBoxItem>Choice</ComboBoxItem>
                                <ComboBoxItem>Choice</ComboBoxItem>
                                <ComboBoxItem>Choice</ComboBoxItem>
                                <ComboBoxItem>Choice</ComboBoxItem>
                            </ComboBox>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Color" FontWeight="Bold"/>
                        <ComboBox Name="ColorComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="ColorComboBox_TextChanged" 
                                  SelectionChanged="ColorComboBox_SelectionChanged"
                            >
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Margin="10,0" VerticalAlignment="Center">
                        <Label FontWeight="Bold" Content="Avg. Rating"/>
                        <Label Content=" 4.5"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="Degree (ABV) " FontWeight="Bold"/>
                        <TextBox Text="{Binding Name}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="IBU" FontWeight="Bold"/>
                        <TextBox Text="{Binding Name}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Ingredients" FontWeight="Bold"/>
                        <ComboBox Name="IngredientsComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="IngredientsComboBox_TextChanged" 
                                  SelectionChanged="IngredientsComboBox_SelectionChanged"
                            >
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <WrapPanel Margin="10,10">
                        <Image Height="200" Width="200"/>
                        <Button Content="Change picture" Margin="10" Height="25" Width="100"/>
                    </WrapPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Label  Grid.Row="0"  Content="Description" Margin="10,5,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="1"  
                             Margin="10,0,10,20" 
                             Text="Ajouter une descrition..." 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch" 
                             VerticalScrollBarVisibility="Auto" 
                             AcceptsReturn="True"
                             />
                    <Button Grid.Row="2" 
                            Height="30" 
                            Width="100" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Right" 
                            Margin="10"
                            Content="Update"
                            />
                    <Button Grid.Row="2" 
                            Height="30" 
                            Width="100" 
                            VerticalAlignment="Bottom" 
                            HorizontalAlignment="Left" 
                            Margin="10"
                            Content="Delete"
                            />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
