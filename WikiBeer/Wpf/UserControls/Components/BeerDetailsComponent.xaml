<UserControl x:Class="Ipme.WikiBeer.Wpf.UserControls.Components.BeerDetailsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UserControls.Components"
             xmlns:validator="clr-namespace:Ipme.WikiBeer.Wpf.Validation"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="validationTemplate">
            <WrapPanel>
                <TextBlock Foreground="Red" FontSize="20">!</TextBlock>
                <AdornedElementPlaceholder/>
            </WrapPanel>
        </ControlTemplate>
        <Style x:Key="textStyleTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="#333333" />
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" 
                    Value="{Binding (Validation.Errors).CurrentItem.ErrorContent, RelativeSource={RelativeSource Self}}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border DataContext="{Binding ., ElementName=root}" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="2" CornerRadius="5">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Details" Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Name" FontWeight="Bold"/>
                        <TextBox Name="name_box" HorizontalAlignment="Stretch"
                                 Validation.ErrorTemplate="{StaticResource validationTemplate}"
                                 Style="{StaticResource textStyleTextBox}"
                                  >
                            <TextBox.Text>
                                <Binding Path="BeerDetails.Name" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validator:NameRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Brewery" FontWeight="Bold"/>
                        <ComboBox x:Name="BreweriesComboBox"
                                  ItemsSource="{Binding Breweries.List}"
                                  Text="{Binding BeerDetails.Brewery.Name}"
                                  DisplayMemberPath="Name"
                                  IsEditable="True"
                                  StaysOpenOnEdit="True">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Style" FontWeight="Bold"/>
                        <ComboBox Name="StylesComboBox" 
                                  ItemsSource="{Binding Styles.List}"
                                  Text="{Binding BeerDetails.Style.Name}"
                                  DisplayMemberPath="Name"
                                  IsEditable="True" 
                                  StaysOpenOnEdit="True">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Color" FontWeight="Bold"/>
                        <ComboBox Name="ColorsComboBox"
                                  ItemsSource="{Binding Colors.List}"
                                  Text="{Binding BeerDetails.Color.Name}"
                                  DisplayMemberPath="Name"
                                  IsEditable="True" 
                                  StaysOpenOnEdit="True">
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Margin="10,0" VerticalAlignment="Center">
                        <Label FontWeight="Bold" Content="Avg. Rating"/>
                        <Label Content=" 4.5"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="Degree (ABV) " FontWeight="Bold"/>
                        <TextBox Text="{Binding BeerDetails.Degree ,UpdateSourceTrigger=PropertyChanged}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="IBU" FontWeight="Bold"/>
                        <TextBox Text="{Binding BeerDetails.Ibu ,UpdateSourceTrigger=PropertyChanged}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Ingredients" FontWeight="Bold"/>
                        <ComboBox Name="IngredientsComboBox"
                                  ItemsSource="{Binding Ingredients.List}"
                                  DisplayMemberPath="Name"
                                  IsEditable="True" 
                                  StaysOpenOnEdit="True">
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <WrapPanel Margin="10,10">
                        <Border BorderBrush="Gainsboro" BorderThickness="2" CornerRadius="5" Margin="0,0,0,5">
                            <Image Height="200" Width="244"/>
                        </Border>
                        <Button Content="Change picture" Margin="10" Height="25" Width="100"/>
                    </WrapPanel>
                </Grid>
            </Grid>
            <Grid x:Name="Description" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label  Grid.Row="0"  Content="Description" FontWeight="Bold" Margin="10,5,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="1"  
                         Margin="10,0,10,20" 
                         Text="{Binding BeerDetails.Description ,UpdateSourceTrigger=PropertyChanged}" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch" 
                         VerticalScrollBarVisibility="Auto" 
                         AcceptsReturn="True"
                         />
            </Grid>
        </Grid>
    </Border>
</UserControl>
