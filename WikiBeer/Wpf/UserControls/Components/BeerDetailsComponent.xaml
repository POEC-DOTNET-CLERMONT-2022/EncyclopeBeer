<UserControl x:Class="Ipme.WikiBeer.Wpf.UserControls.Components.BeerDetailsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UserControls.Components"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="600" d:DesignWidth="800">
    <Border DataContext="{Binding ., ElementName=root}" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="2" CornerRadius="5">
        <Grid DataContext="{Binding Beers.ToModify}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Details" Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Name" FontWeight="Bold"/>
                        <TextBox Text="{Binding Name ,UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Brewery" FontWeight="Bold"/>
                        <ComboBox Name="BreweryComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="BreweryComboBox_TextChanged" 
                                  SelectionChanged="BreweryComboBox_SelectionChanged"
                                  SelectedItem="{Binding Brewery.Name ,UpdateSourceTrigger=PropertyChanged}">
                            <ListBox DataContext="{Binding Breweries.List}" ItemsSource="{Binding .}">
                                <ComboBoxItem>Choice</ComboBoxItem>
                            </ListBox>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Style" FontWeight="Bold"/>
                        <ComboBox TextBoxBase.TextChanged="StyleComboBox_TextChanged"  
                                  VerticalAlignment="Top" Name="StyleComboBox" 
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  SelectionChanged="StyleComboBox_SelectionChanged"
                                  SelectedItem="{Binding Style.Name, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Color" FontWeight="Bold"/>
                        <ComboBox Name="ColorComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="ColorComboBox_TextChanged" 
                                  SelectionChanged="ColorComboBox_SelectionChanged"
                                  SelectedItem="{Binding Color, UpdateSourceTrigger=PropertyChanged}"
                            >
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Margin="10,0" VerticalAlignment="Center">
                        <Label FontWeight="Bold" Content="Avg. Rating"/>
                        <Label Content=" 4.5"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <WrapPanel Grid.Row="0" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="Degree (ABV) " FontWeight="Bold"/>
                        <TextBox Text="{Binding Degree ,UpdateSourceTrigger=PropertyChanged}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="1" Margin="10,0" VerticalAlignment="Center" >
                        <Label Content="IBU" FontWeight="Bold"/>
                        <TextBox Text="{Binding Ibu ,UpdateSourceTrigger=PropertyChanged}" Width="75" Margin="10,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </WrapPanel>
                    <StackPanel Grid.Row="2" Margin="10,0" VerticalAlignment="Center">
                        <Label Content="Ingredients" FontWeight="Bold"/>
                        <ComboBox Name="IngredientsComboBox"
                                  VerticalAlignment="Top"  
                                  IsEditable="True" 
                                  StaysOpenOnEdit="True" 
                                  TextBoxBase.TextChanged="IngredientsComboBox_TextChanged" 
                                  SelectionChanged="IngredientsComboBox_SelectionChanged"
                            >
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                            <ComboBoxItem>Choice</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <WrapPanel Margin="10,10">
                        <Border BorderBrush="Gainsboro" BorderThickness="2" CornerRadius="5" Margin="0,0,0,5">
                            <Image Height="200" Width="244"/>
                        </Border>
                        <Button Content="Change picture" Margin="10" Height="25" Width="100"/>
                    </WrapPanel>
                </Grid>
            </Grid>
            <Grid x:Name="Description" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Label  Grid.Row="0"  Content="Description" FontWeight="Bold" Margin="10,5,10,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="1"  
                         Margin="10,0,10,20" 
                         Text="{Binding Description ,UpdateSourceTrigger=PropertyChanged}" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch" 
                         VerticalScrollBarVisibility="Auto" 
                         AcceptsReturn="True"
                         />
                <Button x:Name="Update"
                        Grid.Row="2" 
                        Height="30" 
                        Width="100" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Right" 
                        Margin="10"
                        Content="Update"
                        Click="Update_Click"
                        />
                <Button x:Name="Delete"
                        Grid.Row="2" 
                        Height="30" 
                        Width="100" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Left" 
                        Margin="10"
                        Content="Delete"
                        Click="Delete_Click"
                        />
                </Grid>
        </Grid>
    </Border>
</UserControl>
