<UserControl x:Class="Ipme.WikiBeer.Wpf.UserControls.Components.ListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UserControls.Components"
             mc:Ignorable="d" x:Name="root"
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid DataContext="{Binding ., ElementName=root}">
        <ListBox ItemsSource="{Binding BeersList}" SelectedItem="{Binding CurrentBeer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Background="WhiteSmoke" Width="200" Height="50">
                        <TextBlock Text="{Binding Name}" Height="auto" Width="auto"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
