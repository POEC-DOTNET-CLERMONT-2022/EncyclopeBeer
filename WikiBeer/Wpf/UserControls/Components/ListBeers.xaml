<UserControl x:Class="Ipme.WikiBeer.Wpf.UserControls.Components.ListBeers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ipme.WikiBeer.Wpf.UserControls.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid Background="LightGray" DataContext="{Binding ., BeersList}">
        <ListBox ItemsSource="{Binding BeersList.Beers}" SelectedItem="{Binding CurrentBeer}">
            
        </ListBox>
            
    </Grid>
</UserControl>
